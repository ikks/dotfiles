// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "ssh_connections": [
    {
      "host": "ssh.lightning.ai",
      "projects": [
        {
          "paths": [
            "/teamspace/studios/this_studio/piper"
          ]
        }
      ]
    },
    {
      "host": "ssh.kaggle",
      "projects": [
        {
          "paths": [
            "/kaggle/working"
          ]
        }
      ]
    }
  ],
  "vim_mode": false,
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "version": "2"
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark"
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "file_types": {
    "HTML": [
      "shtml",
      "wml"
    ],
    "Markdown": [
      "smd"
    ],
    "CSS": [
      "less"
    ],
    "JSON": [
      "jsonl"
    ],
    "Dockerfile": [
      "Dockerfile.*",
      "podfile",
      "dockerfile"
    ]
  },
  "languages": {
    "HTML": {
      "language_servers": [
        "superhtml"
      ]
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        },
        "python.analysis": {
          "typeCheckingMode": "off"
        },
        "pyright": {
          "disableOrganizeImports": true
        }
      }
    }
  },
  "edit_predictions": {
    "mode": "subtle"
  }
}