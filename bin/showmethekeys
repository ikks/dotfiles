#!/bin/env bash
#
# MIT License
#
# Toggles showing the keys pressed in Wayland
#
# Requires wshowkeys
#
# And setuid this file with
#
# chown root:igor wshowkeys
# chmod +s wshowkeys
#
# Author: Igor TÃ¡mara<igor.tamara@gmail.com>


PROGRAM=~/Apps/bin/wshowkeys
NAME=$(basename $PROGRAM)
if pgrep -x "$NAME" >/dev/null; then
  pkill $NAME
  exit 0
fi

$PROGRAM &
